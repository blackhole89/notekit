<style-scheme id="notekit" _name="Notekit" version="1.0">
  <author>M.S.</author>
  <_description>Notekit color scheme</_description>

  <!-- The scheme tries to look like the default GVim scheme,
       since it is also what the hardwired GtkSourceView 1 color
       scheme did -->

  <!-- Palette -->
  <color name="white"      value="#FFFFFF"/>
  <color name="blue"       value="#0000FF"/>
  <color name="magenta"    value="#FF00FF"/>
  <color name="violet"     value="#6A5ACD"/>
  <color name="cyan"       value="#3678BC"/>
  <color name="gray"       value="#BEBEBE"/>
  <color name="green"      value="#2E8B57"/>
  <color name="bordeaux"   value="#A52A2A"/>
  <color name="red"        value="#FF0000"/>
  <color name="yellow"     value="#FFFF00"/>
  <color name="purple"     value="#A020F0"/>

  <color name="ruri" value="#1F4788"/>
  <color name="benikakehana" value="#5A4F74"/>
  <color name="boutan" value="#A4345D"/>
  <color name="masuhana" value="#4D646C"/>
  <color name="asagi" value="#48929B"/>
  <color name="mizuasagi" value="#749F8D"/>
  <color name="chigusa" value="#317589"/>
  <color name="benifuji" value="#BB7796"/>
  <color name="wakatake" value="#6B9362"/>
  <color name="fujimurasaki" value="#875F9A"/>
  <color name="ayame" value="#763568"/>
  <color name="tokiha" value="#F58F84"/>
  <color name="rokushou" value="#407A52"/>
  <color name="gunjou" value="#5D8CAE"/>
  <color name="sabiasagi" value="#6A7F7A"/>
  <color name="kuchiba" value="#D57835"/>
  <color name="sharegaki" value="#FFA26B"/>
  <color name="araigaki" value="#EC8254"/>

  <!-- Global Settings -->
  <style name="current-line"                background="#eeeeec"/>
  <style name="current-line-number"         background="#eeeeec"/>
  <style name="draw-spaces"                 foreground="#babdb6"/>
  <style name="background-pattern"          background="#f3f3f3"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="white" background="gray"/>
  <style name="bracket-mismatch"            foreground="white" background="red"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="#000000" background="#000000"/>

  <!-- Search Matching -->
  <style name="search-match"                background="yellow"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="wakatake"/>
  <style name="def:shebang"                 foreground="wakatake" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="masuhana"/>
  <style name="def:special-char"            foreground="violet"/>
  <style name="def:string"                  foreground="araigaki"/>
  <style name="def:character"               foreground="araigaki"/>
  <style name="def:decimal"                 foreground="kuchiba"/>
  <style name="def:base-n-integer"          foreground="kuchiba"/>
  <style name="def:floating-point"          foreground="kuchiba"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="sabiasagi"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="gunjou" bold="true"/> <!-- foreground="bordeaux" --> 

  <!-- Types -->
  <style name="def:type"                    foreground="sabiasagi" bold="true"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="mizuasagi"/>
  <style name="def:error"                   background="red" bold="true"/>
  <style name="def:warning"                 background="yellow"/>
  <style name="def:note"                    foreground="blue" background="yellow" bold="true"/>
  <style name="def:underlined"              italic="true" underline="single"/>

  <!-- Heading styles, uncomment to enable -->
  
  <style name="def:heading0"                scale="5.0"/>
  <style name="def:heading1"                scale="2.5" bold="true"/>
  <style name="def:heading2"                scale="2.0" bold="true"/>
  <style name="def:heading3"                scale="1.7" bold="true"/>
  <style name="def:heading4"                scale="1.5" bold="true"/>
  <style name="def:heading5"                scale="1.3" bold="true"/>
  <style name="def:heading6"                scale="1.2" bold="true"/>
 

  <!-- Language specific styles -->
  <style name="diff:added-line"             foreground="#008B8B"/>
  <style name="diff:removed-line"           foreground="#6A5ACD"/>
  <style name="diff:changed-line"           use-style="def:preprocessor"/>
  <style name="diff:special-case"           use-style="def:constant"/>
  <style name="diff:location"               use-style="def:statement"/>
  <style name="diff:diff-file"              use-style="def:type"/>

  <style name="xml:tags"                    foreground="cyan"/>
  <style name="xml:attribute-name"          foreground="violet"/>
  <style name="xml:namespace"               foreground="green" bold="true"/>

  <style name="js:object"                   foreground="#2E8B57" bold="true"/>
  <style name="js:constructors"             foreground="#008B8B"/>

  <style name="latex:display-math"          foreground="#6A5ACD"/>
  <style name="latex:command"               foreground="#2E8B57" bold="true"/>
  <style name="latex:include"               use-style="def:preprocessor"/>
  <style name="latexc:display-math"         foreground="#6A5ACD"/>
  <style name="latexc:command"              foreground="#2E8B57" bold="true"/>
  <style name="latexc:include"              use-style="def:preprocessor"/>

  <style name="sh:variable"                 foreground="#6A5ACD"/>

  <!-- legacy styles for old lang files -->
  <style name="Others"                      foreground="#2E8B57" bold="true"/>
  <style name="Others 2"                    foreground="#008B8B"/>
  <style name="Others 3"                    foreground="#6A5ACD"/>

  <!-- custom overrides -->
  <style name="markdown:tag"         foreground="#A0A8C0"/>

  <style name="markdown:list-marker" foreground="#A0A8C0" bold="true"/>
  <style name="markdown:invisible"             foreground="#FFFFFF"/>
  <style name="markdown:strong-emphasis" bold="true"/>
</style-scheme>
